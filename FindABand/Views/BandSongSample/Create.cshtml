@model FindABand.Models.BandSongSample

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>
    Upload Sample of Your band
</h4>
<hr />

<form method="post" enctype="multipart/form-data" asp-controller="BandSongSample" asp-action="Upload">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple>
        </div>
    </div>
    <div class="form-group">
        <input id="bandId"
               name="bandId"
               type="hidden"
               value="@Model.BandId" />
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload">
        </div>
    </div>
</form>

