@model FindABand.ViewModels.BandDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.band.Name)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.band.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.band.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.band.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.band.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.band.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.band.State)
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.band.GenreName)
        </dd>
    </dl>
</div>

<table>
@foreach (var item in Model.band.Songs)
{
    <tr>
        <td>
            <a href="/@Html.DisplayFor(modelItem => item.FileName)">@Html.DisplayFor(modelItem => item.FileName)</a>
            <audio controls>
                <source src="/@Html.DisplayFor(modelItem => item.FileName)" type="audio/mpeg">
            </audio>
        </td>
    </tr>
}
</table>

<a href="/invite/UserCreate?bandId=@Model.band.BandId">Invite To Connect</a>

@if(Model.inviteId != null)
{
    <h4>This band sent you an invite <a href="/invite/details/?id=@Model.inviteId" style="color: green">View Invite</a></h4>
}