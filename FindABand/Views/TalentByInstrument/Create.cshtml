@model FindABand.ViewModels.InstrumentViewModel

@{
    ViewData["Title"] = "Create";
}
<script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>

<h4>What Instruments Can you play?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InstrumentId1" class="control-label"></label>
                <select asp-for="InstrumentId1" class="instruments"></select>
                <span asp-validation-for="InstrumentId1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstrumentId2" class="control-label"></label>
                <select asp-for="InstrumentId2" class="instruments"></select>
                <span asp-validation-for="InstrumentId2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstrumentId3" class="control-label"></label>
                <select asp-for="InstrumentId3" class="instruments"></select>
                <span asp-validation-for="InstrumentId3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<script src="~/js/Instruments.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
