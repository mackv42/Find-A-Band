@model FindABand.Models.Invite

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Invite</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" type="text" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="UserRecipientId"
                       name="UserRecipientId"
                       type="hidden"
                       value="@Model.UserRecipientId" />
            </div>
            <div class="form-group">
                <input id="BandSenderId"
                       name="BandSenderId"
                       type="hidden"
                       value="@Model.BandSenderId" />
            </div>

            <div class="form-group">
                <input id="UserSenderId"
                       name="UserSenderId"
                       type="hidden"
                       value="@Model.UserSenderId" />
            </div>

            <div class="form-group">
                <input id="BandRecipientId"
                       name="BandRecipientId"
                       type="hidden"
                       value="@Model.BandRecipientId" />
            </div>

            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
