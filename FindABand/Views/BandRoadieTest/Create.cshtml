@model FindABand.ViewModels.BandRoadieTestQuestionViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Roadie Test Questions</h4>
<hr />

<ol>
    @foreach (var q in Model.TestQuestions)
    {
    <li>
        As a musician Band I would Like a musician that
        @switch (q.Weight)
        {
            case 0:
                <span>Never</span>
                break;
            case 0.25:
                <span>Rarely</span>
                break;
            case 0.5:
                <span>Sometimes</span>
                break;
            case 0.75:
                <span>Often</span>
                break;
            case 1:
                <span>Always</span>
                break;
        }
        @q.Question;
    </li>
    }
</ol>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                As a band I would like to Connect With Someone Who <select asp-for="NewQuestion.Weight">
                    <option value="0">Never</option>
                    <option value="0.25">Rarely</option>
                    <option value="0.5">Sometimes</option>
                    <option value="0.75">Often</option>
                    <option value="1">Always</option>
                </select>
                <span asp-validation-for="NewQuestion.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewQuestion.Question" class="control-label"></label>
                <input asp-for="NewQuestion.Question" class="form-control" />
                <span asp-validation-for="NewQuestion.Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NewQuestion.BandId"
                       type="hidden"
                       value="@Model.NewQuestion.BandId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Home"><input type="button" value="Finish"/></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
